{% extends 'base.html.twig' %}
{% block body %}


{% for message in app.flashes('notice') %}

<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  
    <div class="text-center">
        <strong>
  
        <div class="flash-notice">
        {{ message }}
        </div>
    </strong>
</div>

  {% endfor %}

</div>

<div class="container-fluid">
    <div class="row justify-content-center">
        <h1 class="text-center text-primary p-4">Liste des thèmes</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-8 bg-dark p-4 m-0 text-primary">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Libellé</th>
                            <th></th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                    {% for theme in themes %}
                    <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                        <td>{{theme.libelle |capitalize }}</td>
                        <td>
                            <a href="{{path('modif_theme',{'id':theme.id})}}">
                                <span class="material-icons" title="Modifier un theme"> create </span>
                            </a>
                        </td>
                        <td>
                            <a href="{{path('liste-theme',{'supp':theme.id})}}">
                                <span class="material-icons" title="Supprimer ce theme"> delete </span>
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
 </div>
 </div>
</div>

 {% endblock %}