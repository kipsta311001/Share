{% extends 'base.html.twig' %}
{% block body %}

  {% for message in app.flashes('notice') %}

<div class="alert alert-dismissible alert-success">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  
<div class="text-center">
  <strong>
  
 <div class="flash-notice">
 {{ message }}
 </div>
  </strong>
</div>

  {% endfor %}

</div>



<div class="container-fluid">
    <div class="row justify-content-center">
        <h1 class="text-center text-primary p-4">Liste des fichiers</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-8 bg-dark p-4 m-0 text-primary">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">nom du fichier</th>
                            <th scope="col">extension</th>
                            <th scope="col">Taille </th>
                            <th scope="col">Propri√©taire</th>
                            <th></th>
                            <th></th>


                        
                        </tr>
                    </thead>
                    <tbody>
                    {% for fichier in fichiers %}
                    <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                        <td>{{fichier.vraiNom |capitalize }}</td>
                        <td>{{fichier.extension|upper }}</td>
                        <td>{{fichier.Taille }}</td>
                        <td>{{fichier.utilisateur.prenom }} {{fichier.utilisateur.nom }} </td>
                        <td>
                            <a href="{{path('telechargement-fichier',{'id':fichier.id})}}">
                                <span class="material-icons" title="Modifier un utilisateur"> create </span>
                            </a>
                        </td>
                        <td>
                            <a href="{{path('supp-fichier',{'id':fichier.id})}}">
                                <span class="material-icons" title="supprimer ce fichier"> delete </span>
                            </a>
                        </td>

                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
 </div>
 </div>
</div>

 {% endblock %}